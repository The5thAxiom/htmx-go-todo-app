<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{{ .Title }}</title>
        <link rel="stylesheet" href="static/css/styles.css">
        <script src="static/js/htmx.min.js"></script>
    </head>
    <body>
        {{/* comments */}}
        <h1>{{ .Title }}</h1>
        <ul id="todoLists">
            {{ range.TodoLists }}
            <li>
                {{ .Title }} 
                <button
                    hx-delete="/api/todoLists?todoListId={{.Id}}"
                    hx-swap="delete"
                    hx-trigger="click"
                    hx-target="closest li"
                    hx-confirm="Are you sure you want to delete this todoList? This will also delete all tasks in the list."
                >Delete</button>
                <ul id="todoList-{{.Id}}">
                    {{ range.Todos }}
                        {{ if .Completed }}
                            <li class="done">
                                <div class="todo-task">
                                    <button
                                        hx-get="/api/todos/uncomplete?todoId={{ .Id }}"
                                        hx-trigger="click"
                                        hx-swap="outerHTML"
                                    >X</button>{{ .Task }}
                                    <button
                                        hx-delete="/api/todos?todoId={{.Id}}"
                                        hx-swap="delete"
                                        hx-trigger="click"
                                        hx-target="closest li"
                                        hx-confirm="Are you sure you want to delete this task?"
                                    >Delete</button>
                                </div>
                                <div class="todo-description">{{.Description}}</div>
                            </li>
                        {{ else }}
                            <li>
                                <div class="todo-task">
                                    <button
                                        hx-get="/api/todos/complete?todoId={{ .Id }}"
                                        hx-trigger="click"
                                        hx-swap="outerHTML"
                                    >&nbsp;</button>{{ .Task }}
                                    <button
                                        hx-delete="/api/todos?todoId={{.Id}}"
                                        hx-swap="delete"
                                        hx-trigger="click"
                                        hx-target="closest li"
                                        hx-confirm="Are you sure you want to delete this task?"
                                    >Delete</button>
                                </div>
                                <div class="todo-description">{{.Description}}</div>
                            </li>
                        {{ end }}
                    {{ end }}
                </ul>
                <form
                    class="new-todo-form"
                    hx-post="/api/todos/add?todoListId={{.Id}}"
                    hx-swap="beforeend"
                    hx-target="#todoList-{{.Id}}"
                    hx-on::after-request="this.reset()"
                >
                    <input type="text" required placeholder="Task" name="task"/>
                    <textarea placeholder="description" name="description"></textarea>
                    <button>Add Todo to list <i>{{.Title}}</i></button>
                </form>
            </li>
            {{ end }}
        </ul>
        <form
            class="new-todoList-form"
            hx-post="/api/todoLists/add"
            hx-target="#todoLists"
            hx-swap="beforeend"
            hx-on::after-request="this.reset()"
        >
        <input type="text" required placeholder="List title" name="title" />
        <button>Add new todo list</button>
        </form>
    </body>
</html>
